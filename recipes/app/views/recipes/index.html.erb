<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-3">
      <h1>Recipes</h1>
    </div>
  </div>
</div>

<p><%= link_to "New Recipe", new_recipe_path, class: "btn btn-sm btn-success" %></p>

<table class="table">
  <thead>
    <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td>
          <%= link_to 'show', recipe %>
          <%= link_to 'edit', edit_recipe_path(recipe)%>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
