<% if user_signed_in? %>
  <div id="bills-chart" data-bills="<%= @bills.to_json %>"></div>
<% else %>
  <div class="jumbotron">
    <h1>Utilities Dashboard</h1>
    <p>
      The Utilities Dashboard makes it easy to track your utility bills over time!
    </p>
    <p>
      <%= link_to 'Sign Up!', new_user_registration_path,
          class: 'btn btn-primary btn-lg' %>
    </p>
  </div>
<%end%>
